.menu {
  &--color-white {
    color: #fff;
  }
}

.menu__list {
  display: flex;
  justify-content: center;
}

.menu__item {
  // margin-right: 60px;
  margin-right: 8%;

  &:last-child {
    margin-right: 0;
  } 
     
  a:hover {
   color: #5500F2; 
  } 
}

.menu__link {
  text-decoration: none;
  white-space: nowrap;
    
    &:hover {
    position: inherit;
    color: #5500F2;
    border-bottom: 2px solid #5500F2;
  }
}
